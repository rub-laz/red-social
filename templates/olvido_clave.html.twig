<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Olvidó su contraseña</title>
    <link href="{{ asset('CSS/registro_clave.css') }}" rel="stylesheet">
</head>

<body>
    <div id="contenedor">
        <div id="central">
            <img src="{{asset('recursos/logotipo.png')}}" alt="logo_iri" id="logotipo">
            <div id="login">

                    {% for flash_message in app.session.flashbag.get('aviso') %}
                        <div id="alerta">
                            <p><b>{{ flash_message }}</b></p>
                        </div>
                    {% endfor %}

                <div class="titulo">
                <h1>Inserte correo electrónico</h1>
                </div>
                <form action="{{path('comprobar_correo')}}" method="post" id="loginform">
                    <label for="correo">Correo*:</label>
                    <input type="text" name="correo" placeholder="Correo Electrónico" autocomplete="off">
                    <button type="submit" name="enviar">Comprobar</button>
                </form>
            </div>
            <div class="inferior">
                <a href="{{path('control_login')}}">Atrás</a>
            </div>
        </div>
    </div>
</body>

</html>
